package phamvi;

import java.util.jar.Attributes.Name;

//định nghĩa lớp Phân số
public class phanso {
	//thuộc tính
	private int tuso;
	private int mauso;
	
	//hàm dựng
	public phanso() {};
	
	public phanso(int ts, int ms) {
		this.tuso = ts;
		this.mauso = ms;
	}
	
	//phương thức set/get dữ liệu
	public int get_tu() {
		return this.tuso;
	}
	
	public int get_mauso() {
		return this.mauso;
	}
	
	public void set_tu(int tuso) {this.tuso = tuso;}
	public void set_mauso(int mauso) {this.mauso = mauso;}
	Xuly xl = new Xuly();
	//phương thức nhập
	
	//phương thức xuất
	public void Xuat() {
		System.out.println(this.tuso+" / "+this.mauso);
	}
	//phương thức nhập phân số
	public void Nhap() {
		System.out.println("Nhập tử số:");
		this.tuso = xl.inputINT();
		System.out.println("Nhập mẫu số:");
		this.mauso = xl.inputINT();
	}
	//phương thức rút gọn phân số
	
	//phương thức tìm USCLN
	
