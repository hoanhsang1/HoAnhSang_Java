package bai1;
import java.util.Scanner;

public class Xuly {
	public int cau1(int n) {
		int result = 0;
		for(int i=0; i<=n; i++) {
			result += i*2;
		}
		return result;
	}
	
	public int inputINT() {
		int result;
		Scanner infrom = new Scanner(System.in);
		System.out.print("Nhập số nguyên N: ");
		while (true) {
			try {
				result = infrom.nextInt();
				break;
			} catch (NumberFormatException e) {
				System.err.println("! Lỗi dữ liệu");
				System.out.print("Vui lòng nhập lại dữ liệu của N: ");
				continue;
			}
		}
		return result;
	}
}
